        address: 1
        input_type: holding
        data_type: uint16
        unit_of_measurement: "%"

      - name: "Notus Ventilator Fan Speed"
        slave: 1
        address: 2
        input_type: holding
        data_type: uint16
        unit_of_measurement: "%"

      - name: "Notus Set Temperature"
        slave: 1
        address: 3
        input_type: holding
        data_type: uint16
        scale: 0.1
        precision: 1
        unit_of_measurement: "Â°C"

      - name: "Notus Auto Mode State"
        slave: 1
        address: 4
